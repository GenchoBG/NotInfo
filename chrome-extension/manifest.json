{
  "manifest_version": 2,
  "name": "!info",
  "version": "0.1",
  "permissions": ["declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "page_action": {
      "default_popup": "popup.html"
   },
}