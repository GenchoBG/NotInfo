{
  "manifest_version": 2,
  "name": "!info",
  "version": "0.1",
  "permissions": [
  	"declarativeContent", 
  	"storage", 
  	"tabs", 
  	"http://*/", 
  	"https://*/"
  ],
  "icons": {
    "16": "icons/default.png",
    "48": "icons/default.png",
    "128": "icons/default.png"
   },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
      "default_popup": "popup.html"
   }
}